<h1>CARRITO</h1>
<div class="container">

  <div>

    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Titulo</th>
          <th scope="col">Precio</th>
          <th scope="col">Cantidad</th>
          <th scope="col">Codigo</th>
          <th scope="col">Categoria</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}  

          <tr>
            <td>{{this.product.title}}</td>
            <td>{{this.product.price}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.product.code}}</td>
            <td>{{this.product.category}}</td>
            <td><button onclick="deleteProductFromCart(`{{this.product._id}}`)">Delete</button></td>
          </tr>
      
        {{/each}}
      </tbody>
    </table>

    <div style="display: flex;">
      <h2 style="margin-right: 10px;">Total:</h2>
      <h2 id="total-price"></h2>
    </div>

    <button onclick="purchase()">Finalizar compra</button>
  </div>

</div>

<a href="/products">Go to Home</a>


<script src="/js/cart.js"></script>

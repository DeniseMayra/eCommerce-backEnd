<h1>Signup Page</h1>

<form action="/api/sessions/signup" method="POST" enctype="multipart/form-data">
  <input type="text" name="first_name" placeholder="Ingrese nombre" required><br><br> 
  <input type="text" name="last_name" placeholder="Ingrese apellido"><br><br>
  <input type="email" name="email" placeholder="Ingrese email" required><br><br>
  <input type="number" name="age" placeholder="Ingrese edad"><br><br>
  <input type="password" name="password" placeholder="Ingrese contraseÃ±a" required><br><br>
  <select name="role" id="role">
    <option value="user">User</option>
    <option value="admin">Admin</option>
    <option value="premium">Premium</option>
  </select><br><br>
  <input type="file" name="avatar">
  <br><br>
  <button>Registrar</button>
</form>

<a href="/api/sessions/signup-github">Registrarse con GitHub</a>

{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{message}}
  </div>
{{/if}}

<script src="/js/signup.js"></script>

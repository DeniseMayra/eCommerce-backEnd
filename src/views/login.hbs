<h1>Login Page</h1>

<form id="loginForm">
  <input type="email" name="email" placeholder="Ingrese email" required><br><br>
  <input type="password" name="password" placeholder="Ingrese contraseña" required><br><br>
  <br>
  <button type="submit">Iniciar Sesion</button>
</form>

<a href="/forgot-password">Olvide mi contraseña</a>

<div id="errorMsj"></div>


{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{message}}
  </div>
{{/if}}

<script src="/js/login.js"></script>
